{
  "dashboard": {
    "id": null,
    "title": "Friend Bot Monitoring",
    "tags": ["telegram", "bot"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Messages Processing Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(bot_messages_processed_total[5m])",
            "legendFormat": "messages/sec",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {"color": {"mode": "palette-classic"}, "unit": "ops"}
        }
      },
      {
        "id": 2,
        "title": "Messages Received by Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "bot_messages_received_total",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "bot_active_users",
            "legendFormat": "users",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {"color": {"mode": "thresholds"}}
        }
      },
      {
        "id": 4,
        "title": "AI Requests Status",
        "type": "stat",
        "targets": [
          {
            "expr": "openai_requests_total",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Message Processing Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(message_processing_duration_seconds_sum[5m]) / rate(message_processing_duration_seconds_count[5m])",
            "legendFormat": "avg time",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "fieldConfig": {"defaults": {"unit": "s"}}
      },
      {
        "id": 6,
        "title": "Conversation Length",
        "type": "timeseries",
        "targets": [
          {
            "expr": "conversation_message_count",
            "legendFormat": "messages",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {"from": "now-6h", "to": "now"},
    "refresh": "10s"
  }
}