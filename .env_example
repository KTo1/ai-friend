# === ВЫБОР AI ПРОВАЙДЕРА ===
AI_PROVIDER=huggingface  # ollama, openai, gemini, huggingface, deepseek

# === OLLAMA НАСТРОЙКИ ===
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# === OPENAI НАСТРОЙКИ ===
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# === GEMINI НАСТРОЙКИ ===
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# === HUGGING FACE НАСТРОЙКИ ===
HF_API_KEY=  # опционально для бесплатного использования
HF_MODEL=deepseek-ai/DeepSeek-R1

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===
TELEGRAM_BOT_TOKEN=

# === НАСТРОЙКИ БАЗЫ ДАННЫХ ===
DB_NAME=friend_bot.db

# === НАСТРОЙКИ МОНИТОРИНГА ===
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Трассировка отключена по умолчанию (требует Jaeger)
ENABLE_TRACING=false

# === НАСТРОЙКИ JAEGER (если включена трассировка) ===
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Проактивные сообщения
PROACTIVE_CHECK_INTERVAL=300
PROACTIVE_MORNING_HOURS=7-10
PROACTIVE_EVENING_HOURS=19-23
PROACTIVE_INACTIVITY_HOURS=24

# Настройка лимитов
RATE_LIMIT_PER_MINUTE=3
RATE_LIMIT_PER_HOUR=30
RATE_LIMIT_PER_DAY=100

# Admin Configuration
DEFAULT_ADMIN_IDS=6177106943 # coma separated

# Message Limits Configuration
DEFAULT_MAX_MESSAGE_LENGTH=100
DEFAULT_MAX_CONTEXT_MESSAGES=3
DEFAULT_MAX_CONTEXT_LENGTH=1200